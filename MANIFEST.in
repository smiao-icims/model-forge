# Include README and LICENSE
include README.md
include LICENSE
include CONTRIBUTING.md
include CODE_REVIEW_GUIDELINES.md

# Include package data
recursive-include src/modelforge *.py

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude poetry.lock
exclude .cursorrules

# Exclude test and build directories
prune tests
prune htmlcov
prune .pytest_cache
prune .ruff_cache
prune .mypy_cache
prune dist
prune build
prune .eggs
prune *.egg-info
